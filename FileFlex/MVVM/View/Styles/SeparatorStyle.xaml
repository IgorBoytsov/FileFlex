            <Setter.Value>
                <ControlTemplate TargetType="Separator">
                    <Border Margin="5,0" Background="#FF1A1A1A" Height="1" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>